{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["firstName", "userId"]
    },
    "public-profiles" : {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["postsKey", "userKey"]
    },
    "posts": {
      ".read" : "true",
      ".write": "auth != null",
      "$post_id": {
        ".indexOn" : "id"
      }
    },
    "pages": {
      ".read" : "true",
      ".write": "auth !== null",
      ".indexOn": ["adminUserKey", "category"]
    },
    "key" : {
      ".read" : "true",
      ".write" : "auth != null"
    }
  }
}


// modified with indexes for general search


{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["firstName","lastName","userId"],

    },
    "public-profiles" : {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["postsKey", "userKey"]
    },
    "posts": {
      ".read" : "true",
      ".write": "auth != null",
      "$post_id": {
        ".indexOn": ["text", "id"]
      }
    },
    "pages": {
      ".read" : "true",
      ".write": "auth != null",
      ".indexOn": ["adminUserKey", "category", "name", "adminName"]
    },
    "chats": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "activeChat": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "activity": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$user_id": {
        "records": {
          ".indexOn": ["sortDate", "type", "read","id"]
        },
        "personal": {
          ".indexOn" : ["sortDate", "type"]
        }
      }
    },
    "key" : {
      ".read" : "true",
      ".write" : "auth != null"
    }
  }
}