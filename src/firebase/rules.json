{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["firstName", "userId"]
    },
    "public-profiles" : {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["postsKey", "userKey"]
    },
    "posts": {
      ".read" : "true",
      ".write": "auth != null",
      "$post_id": {
        ".indexOn" : "id"
      }
    },
    "pages": {
      ".read" : "true",
      ".write": "auth !== null",
      ".indexOn": ["adminUserKey", "category"]
    },
    "key" : {
      ".read" : "true",
      ".write" : "auth != null"
    }
  }
}